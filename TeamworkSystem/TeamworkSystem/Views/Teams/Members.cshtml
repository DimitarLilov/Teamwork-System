@using TeamworkSystem.Extensions
@using TeamworkSystem.Models.ViewModels.Teams.Board
@model MembersViewModel
@{
    ViewBag.Title = "Team Members";
}


@Html.Action("BoardInfo", new { id = Model.TeamId })

<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="pull-left">
                <h3 class="panel-title">Projects</h3>
            </div>
            <div class="pull-right">
                <a href="@Url.Action("AddMember","Teams", new {id = Model.TeamId})" class="btn btn-sm btn-warning"><i class="fa fa-plus"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            @foreach (var user in Model.Members)
            {
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="mini-stat-type-6 bg-success">
                        @Html.Image(@Url.Content(user.ProfilePhoto), "profile-avatar img-circle img-bordered-success  center-block", "Profile Picture")
                        @Html.ActionLink(user.FullName, "Show", "Users", new { username = user.Username }, new { @class = "small-box-footer" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
