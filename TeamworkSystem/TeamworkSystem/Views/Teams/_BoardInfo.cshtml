@using TeamworkSystem.Extensions
@using TeamworkSystem.Models.ViewModels.Teams.Board
@model BoardInfoViewModel

<div class="row container-fluid">
    <div class="col-md-12">
        <div class="pull-left">
            <h1>
                @Html.ActionLink(Model.Name, "Board", "Teams", new { id = Model.Id }, null)
                <a href="@Url.Action("Show",new{id = Model.Id})" class="btn btn-info">
                    <span class="fa fa-eye "></span>
                </a>
            </h1>

        </div>
        <div class="pull-right">
            <ul class="list-inline">
                @foreach (var user in Model.Members)
            {
                    <li>
                        <a href="@Url.Action("Show","Users",new { username = user.Username })"> @Html.Image(user.ProfilePhoto, "avatar img-circle", "Profile Picture")</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
<br>
<div class="row container-fluid">
    <div class="col-md-2 col-xs-6">
        <a href="@Url.Action("Tasks", "Teams", new { id = Model.Id })" class="tile tile-danger"><span class="fa fa-tasks"></span></a>
    </div>
    <div class="col-md-2 col-xs-6">
        <a href="#" class="tile tile-success"><span class="fa fa-envelope"></span></a>
    </div>
    <div class="col-md-2 col-xs-6">
        <a href="#" class="tile tile-info">
            @Html.DisplayFor(model => DateTime.Now.Day)<p>@DateTime.Now.ToString("MMMM")</p>
            <div class="informer dir-tr">
                <span class="fa fa-calendar"></span>
            </div>
        </a>
    </div>
    <div class="col-md-2 col-xs-6">
        <a href="@Url.Action("Members", "Teams", new { id = Model.Id })" class="tile tile-success"><span class="fa fa-group"></span></a>
    </div>
    <div class="col-md-2 col-xs-6">
        <a href="@Url.Action("BoardProjects", "Teams", new { id = Model.Id })" class="tile tile-info">@Html.DisplayFor(project => project.ProjectsCount)<p>Projects</p></a>
    </div>
    <div class="col-md-2 col-xs-6">
        <a href="@Url.Action("Edit", "Teams", new { id = Model.Id })" class="tile tile-success "><span class="fa fa-cog"></span></a>
    </div>
</div>
